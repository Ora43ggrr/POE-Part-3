@model List<POE_Part_3.Models.Claim>
@{
    ViewData["Title"] = "Review Claims";
}

<div class="container">
    <h2 class="text-blue mb-4">Review Claims</h2>

    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger">@TempData["Error"]</div>
    }
    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success">@TempData["Success"]</div>
    }

    <div class="card">
        <div class="card-header">
            <h5 class="mb-0">Claims for Approval</h5>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-hover">
                    <thead>
                        <tr>
                            <th>Claim ID</th>
                            <th>Lecturer</th>
                            <th>Period</th>
                            <th>Hours</th>
                            <th>Amount</th>
                            <th>Status</th>
                            <th>Submission Date</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var claim in Model)
                        {
                            <tr>
                                <td>@claim.ClaimId</td>
                                <td>@claim.LecturerName</td>
                                <td>@System.Globalization.DateTimeFormatInfo.CurrentInfo.GetMonthName(claim.Month) @claim.Year</td>
                                <td>@claim.HoursWorked</td>
                                <td>R @claim.TotalAmount.ToString("N2")</td>
                                <td><span class="status-badge status-@claim.Status.ToLower()">@claim.Status</span></td>
                                <td>@claim.SubmissionDate.ToString("dd MMM yyyy")</td>
                                <td>
                                    <div class="btn-group" role="group">
                                        <form method="post" asp-action="UpdateClaimStatus" class="d-inline">
                                            <input type="hidden" name="claimId" value="@claim.Id" />
                                            <button type="submit" name="status" value="Approved" class="btn btn-sm btn-success me-1">Approve</button>
                                            <button type="submit" name="status" value="Rejected" class="btn btn-sm btn-danger">Reject</button>
                                        </form>
                                        <a href="@Url.Action("ClaimDetails", new { id = claim.Id })" class="btn btn-sm btn-outline-primary ms-1">Details</a>
                                    </div>
                                </td>
                            </tr>
                        }
                        @if (!Model.Any())
                        {
                            <tr>
                                <td colspan="8" class="text-center">No pending claims for review</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>

    <div class="mt-3">
        <a href="@Url.Action("AllClaims","Home")" class="btn btn-outline-primary">View All Claims</a>
        <a href="@Url.Action("Dashboard","Home")" class="btn btn-outline-secondary">Back to Dashboard</a>
    </div>
</div>