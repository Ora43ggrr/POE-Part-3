<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Contract Monthly Claim System</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <style>
        .bg-blue {
            background-color: #1e40af !important;
        }

        .text-blue {
            color: #1e40af !important;
        }

        .btn-primary {
            background-color: #1e40af;
            border-color: #1e3a8a;
        }

            .btn-primary:hover {
                background-color: #1e3a8a;
                border-color: #1e3a8a;
            }

        .status-badge {
            padding: 0.25rem 0.5rem;
            border-radius: 0.25rem;
            font-size: 0.875rem;
            font-weight: 500;
        }

        .status-submitted {
            background-color: #fef3c7;
            color: #92400e;
        }

        .status-approved {
            background-color: #d1fae5;
            color: #065f46;
        }

        .status-rejected {
            background-color: #fee2e2;
            color: #991b1b;
        }

        .status-paid {
            background-color: #dbeafe;
            color: #1e40af;
        }

        .upload-area {
            border: 2px dashed #1e40af;
            border-radius: 0.375rem;
            padding: 2rem;
            text-align: center;
            background-color: #f8fafc;
            cursor: pointer;
            transition: background-color 0.2s;
        }

            .upload-area:hover {
                background-color: #e2e8f0;
            }

        .login-container, .register-container {
            max-width: 400px;
            margin: 0 auto;
            padding: 2rem;
        }

        .dashboard-widget {
            transition: transform 0.2s;
            border: 1px solid #e5e7eb;
        }

            .dashboard-widget:hover {
                transform: translateY(-2px);
                box-shadow: 0 4px 6px -1px rgba(0, 0, 0, 0.1);
            }

        .claim-card {
            border: 1px solid #e5e7eb;
            border-radius: 0.375rem;
            transition: background-color 0.2s;
        }

            .claim-card:hover {
                background-color: #f9fafb;
            }

        .navbar-brand {
            font-weight: bold;
            font-size: 1.5rem;
        }

        .user-welcome {
            background-color: rgba(255, 255, 255, 0.1);
            padding: 0.25rem 0.5rem;
            border-radius: 0.25rem;
            margin-left: 1rem;
        }

        .hr-menu {
            background-color: #10b981 !important;
        }
    </style>
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-dark bg-blue border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Dashboard">
                    <strong>CMCS</strong>
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-light" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        @if (!string.IsNullOrEmpty(Context.Session.GetString("UserId")))
                        {
                            <li class="nav-item">
                                <a class="nav-link text-light" asp-area="" asp-controller="Home" asp-action="Dashboard">Dashboard</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-light" asp-area="" asp-controller="Home" asp-action="Claims">My Claims</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-light" asp-area="" asp-controller="Home" asp-action="SubmitClaim">Submit Claim</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-light" asp-area="" asp-controller="Home" asp-action="Documents">Documents</a>
                            </li>

                            <!-- Programme Coordinator & Academic Manager Menu -->
                            @if (Context.Session.GetString("UserRole") == "ProgrammeCoordinator" || Context.Session.GetString("UserRole") == "AcademicManager")
                            {
                                <li class="nav-item dropdown">
                                    <a class="nav-link text-light dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                        <i class="fas fa-tasks"></i> Management
                                    </a>
                                    <ul class="dropdown-menu">
                                        <li>
                                            <a class="dropdown-item" asp-area="" asp-controller="Home" asp-action="ReviewClaims">
                                                <i class="fas fa-clipboard-check"></i> Review Claims
                                            </a>
                                        </li>
                                        <li>
                                            <a class="dropdown-item" asp-area="" asp-controller="Home" asp-action="AllClaims">
                                                <i class="fas fa-list"></i> All Claims
                                            </a>
                                        </li>
                                        <li>
                                            <a class="dropdown-item" asp-area="" asp-controller="Home" asp-action="Reports">
                                                <i class="fas fa-chart-bar"></i> Reports
                                            </a>
                                        </li>
                                    </ul>
                                </li>
                            }

                            <!-- HR Management Menu -->
                            @if (Context.Session.GetString("UserRole") == "HR")
                            {
                                <li class="nav-item dropdown">
                                    <a class="nav-link text-light dropdown-toggle hr-menu" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                        <i class="fas fa-user-tie"></i> HR Management
                                    </a>
                                    <ul class="dropdown-menu">
                                        <li>
                                            <a class="dropdown-item" asp-area="" asp-controller="Home" asp-action="PaymentProcessing">
                                                <i class="fas fa-money-bill-wave"></i> Payment Processing
                                            </a>
                                        </li>
                                        <li>
                                            <a class="dropdown-item" asp-area="" asp-controller="Home" asp-action="ManageLecturers">
                                                <i class="fas fa-chalkboard-teacher"></i> Manage Lecturers
                                            </a>
                                        </li>
                                        <li>
                                            <a class="dropdown-item" asp-area="" asp-controller="Home" asp-action="Reports">
                                                <i class="fas fa-file-invoice-dollar"></i> Financial Reports
                                            </a>
                                        </li>
                                    </ul>
                                </li>
                            }

                            <!-- Reports Link for All Management Roles -->
                            @if (Context.Session.GetString("UserRole") == "ProgrammeCoordinator" || Context.Session.GetString("UserRole") == "AcademicManager" || Context.Session.GetString("UserRole") == "HR")
                            {
                                <li class="nav-item">
                                    <a class="nav-link text-light" asp-area="" asp-controller="Home" asp-action="Reports">
                                        <i class="fas fa-chart-bar"></i> Reports
                                    </a>
                                </li>
                            }

                            <li class="nav-item">
                                <a class="nav-link text-light" asp-area="" asp-controller="Home" asp-action="Notifications">
                                    <i class="fas fa-bell"></i> Notifications
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-light" asp-area="" asp-controller="Home" asp-action="Privacy">
                                    <i class="fas fa-shield-alt"></i> Privacy
                                </a>
                            </li>
                        }
                    </ul>

                    @if (!string.IsNullOrEmpty(Context.Session.GetString("UserName")))
                    {
                        <div class="navbar-nav">
                            <div class="user-welcome">
                                <span class="text-light">
                                    <i class="fas fa-user"></i>
                                    Welcome, @Context.Session.GetString("UserName")
                                    <small class="d-block">
                                        <strong>@Context.Session.GetString("UserRole")</strong>
                                        @if (Context.Session.GetString("UserRole") == "HR")
                                        {
                                            <span class="badge bg-success ms-1">HR</span>
                                        }
                                    </small>
                                </span>
                            </div>
                            <li class="nav-item">
                                <a class="nav-link text-light" asp-area="" asp-controller="Home" asp-action="Logout">
                                    <i class="fas fa-sign-out-alt"></i> Logout
                                </a>
                            </li>
                        </div>
                    }
                </div>
            </div>
        </nav>
    </header>

    <div class="container">
        <main role="main" class="pb-3">
            @if (TempData["Error"] != null)
            {
                <div class="alert alert-danger alert-dismissible fade show" role="alert">
                    <strong>Error!</strong> @TempData["Error"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            }
            @if (TempData["Success"] != null)
            {
                <div class="alert alert-success alert-dismissible fade show" role="alert">
                    <strong>Success!</strong> @TempData["Success"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            }

            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted bg-blue text-light">
        <div class="container">
            <div class="row">
                <div class="col-md-6">
                    &copy; 2025 - Contract Monthly Claim System -
                    <a asp-area="" asp-controller="Home" asp-action="Privacy" class="text-light">Privacy Policy</a>
                </div>
                <div class="col-md-6 text-end">
                    <span class="text-light">
                        @if (!string.IsNullOrEmpty(Context.Session.GetString("UserName")))
                        {
                            <text>
                                Logged in as: <strong>@Context.Session.GetString("UserName")</strong>
                                <span class="badge bg-light text-dark">@Context.Session.GetString("UserRole")</span>
                            </text>
                        }
                        else
                        {
                            <text>Not logged in</text>
                        }
                    </span>
                </div>
            </div>
        </div>
    </footer>

    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    <script>
        // Calculate total amount in real-time for claim forms
        function calculateTotal() {
            const hours = parseFloat(document.getElementById('hoursWorked')?.value) || 0;
            const rate = parseFloat(document.getElementById('hourlyRate')?.value) || 0;
            const total = hours * rate;
            const totalElement = document.getElementById('totalAmount');
            if (totalElement) {
                totalElement.value = 'R ' + total.toLocaleString('en-ZA', { minimumFractionDigits: 2 });
            }
        }

        // File upload handling
        function handleFileSelect(event) {
            const files = event.target.files;
            if (files.length > 0) {
                const file = files[0];
                const fileSize = file.size / 1024 / 1024; // MB
                if (fileSize > 5) {
                    alert('File size exceeds 5MB limit');
                    event.target.value = '';
                    return;
                }

                // Show file name to user
                const fileNameDisplay = document.getElementById('fileNameDisplay');
                if (fileNameDisplay) {
                    fileNameDisplay.textContent = 'Selected file: ' + file.name;
                }
            }
        }

        // Auto-dismiss alerts after 5 seconds
        function autoDismissAlerts() {
            setTimeout(function() {
                const alerts = document.querySelectorAll('.alert');
                alerts.forEach(function(alert) {
                    const bsAlert = new bootstrap.Alert(alert);
                    bsAlert.close();
                });
            }, 5000);
        }

        // Initialize event listeners when document is ready
        document.addEventListener('DOMContentLoaded', function() {
            // Claim form calculations
            const hoursInput = document.getElementById('hoursWorked');
            const rateInput = document.getElementById('hourlyRate');
            if (hoursInput && rateInput) {
                hoursInput.addEventListener('input', calculateTotal);
                rateInput.addEventListener('input', calculateTotal);
                // Calculate initial total
                calculateTotal();
            }

            // File upload handling
            const fileInputs = document.querySelectorAll('input[type="file"]');
            fileInputs.forEach(input => {
                input.addEventListener('change', handleFileSelect);
            });

            // Auto-dismiss alerts
            autoDismissAlerts();

            // Add confirmation for important actions
            const deleteButtons = document.querySelectorAll('.btn-outline-danger');
            deleteButtons.forEach(button => {
                button.addEventListener('click', function(e) {
                    if (!confirm('Are you sure you want to delete this item? This action cannot be undone.')) {
                        e.preventDefault();
                    }
                });
            });
        });
    </script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>