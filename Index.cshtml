@{
    ViewData["Title"] = "Login";
}

<div class="login-container">
    <h2 class="text-center text-blue mb-4">Contract Monthly Claim System</h2>
    <h4 class="text-center mb-4">Login to Your Account</h4>

    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger">@TempData["Error"]</div>
    }
    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success">@TempData["Success"]</div>
    }

    <form method="post" asp-action="Login">
        <div class="mb-3">
            <label for="Email" class="form-label">Email Address</label>
            <input type="email" class="form-control" id="Email" name="email" placeholder="Enter your email" required>
        </div>

        <div class="mb-3">
            <label for="Password" class="form-label">Password</label>
            <input type="password" class="form-control" id="Password" name="password" placeholder="Enter your password" required>
        </div>

        <div class="mb-3 form-check">
            <input type="checkbox" class="form-check-input" id="rememberMe">
            <label class="form-check-label" for="rememberMe">Remember me</label>
        </div>

        <button type="submit" class="btn btn-primary w-100">Login</button>

        <!-- Demo Accounts Hint -->
        <div class="mt-3 p-3 bg-light rounded">
            <h6 class="text-blue">Demo Accounts:</h6>
            <small class="text-muted">
                <strong>Lecturer:</strong> lecturer@university.com / password123<br>
                <strong>Coordinator:</strong> coordinator@university.com / password123<br>
                <strong>Manager:</strong> manager@university.com / password123<br>
                <strong>HR Manager:</strong> hr@university.com / password123
            </small>
        </div>

        <div class="text-center mt-3">
            <a href="#" class="text-blue">Forgot your password?</a>
        </div>
    </form>

    <hr class="my-4">

    <p class="text-center">
        Don't have an account?
        <a href="@Url.Action("Register","Home")" class="text-blue fw-bold">Register now</a>
    </p>
</div>